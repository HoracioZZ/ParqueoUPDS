@model IEnumerable<ParqueoUPDS.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<h2>Vehículos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Vehículo</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Horas Acumuladas</th>
            <th>Sesiones</th>
            <th>Recompensas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Placa</td>
                <td>@item.Marca</td>
                <td>@item.Modelo</td>
                <td>@item.HorasAcumuladas</td>
                <td>
                    @if (item.Sesiones != null)
                    {
                        @item.Sesiones.Count
                    }
                </td>
                <td>
                    @if (item.Recompensas != null)
                    {
                        @item.Recompensas.Count
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
