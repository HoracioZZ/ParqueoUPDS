@model ParqueoUPDS.Models.Vehiculo

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h2>Eliminar Vehículo</h2>

<div class="alert alert-danger mt-3">
    <h4>¿Está seguro que desea eliminar este vehículo?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card shadow p-4 mt-3">
    <dl class="row">
        <dt class="col-sm-3">Placa</dt>
        <dd class="col-sm-9">@Model.Placa</dd>

        <dt class="col-sm-3">Marca</dt>
        <dd class="col-sm-9">@Model.Marca</dd>

        <dt class="col-sm-3">Modelo</dt>
        <dd class="col-sm-9">@Model.Modelo</dd>

        <dt class="col-sm-3">Horas acumuladas</dt>
        <dd class="col-sm-9">@Model.HorasAcumuladas</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Placa" />

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
