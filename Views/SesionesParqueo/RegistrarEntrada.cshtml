@model ParqueoUPDS.Models.SesionParqueo

@{
    ViewData["Title"] = "Registrar Entrada";
}

<h2>Registrar Entrada de Vehículo</h2>

<div class="card shadow p-4 mt-3">
    <form asp-action="RegistrarEntrada" method="post">
        <div class="mb-3">
            <label for="VehiculoId" class="form-label">Vehículo</label>
            <select asp-for="VehiculoId" class="form-select" asp-items="@(new SelectList(ViewBag.Vehiculos, "Id", "Placa"))">
                <option value="">-- Seleccione un vehículo --</option>
            </select>
            <span asp-validation-for="VehiculoId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Registrar Entrada</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
